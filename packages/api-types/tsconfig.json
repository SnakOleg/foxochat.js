{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "skipLibCheck": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
