{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "foxogram.js",
  "version": "0.1.0",
  "description": "A powerful library for interacting with the Foxogram API",
  "author": "FoxoCorp",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxocorp/foxogram.js"
  },
  "bugs": {
    "url": "https://github.com/foxocorp/foxogram.js/issues"
  },
  "scripts": {
    "build": "rslib build",
    "lint": "eslint",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@foxogram/api": "workspace:^",
    "@foxogram/api-types": "workspace:^",
    "@foxogram/gateway": "workspace:^",
    "@foxogram/gateway-types": "workspace:^",
    "@foxogram/rest": "workspace:^",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@rslib/core": "^0.6.7",
    "@tsconfig/strictest": "^2.0.5",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
