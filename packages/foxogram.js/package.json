{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "foxogram.js",
  "version": "0.1.0",
  "description": "A powerful library for interacting with the Foxogram API",
  "author": "FoxoCorp",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxocorp/foxogram.js"
  },
  "bugs": {
    "url": "https://github.com/foxocorp/foxogram.js/issues"
  },
  "scripts": {
    "build": "unbuild",
    "lint": "eslint ./src",
    "doc": "typedoc ./src/index.ts",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@foxogram/api": "workspace:^",
    "@foxogram/api-types": "workspace:^",
    "@foxogram/gateway": "workspace:^",
    "@foxogram/gateway-types": "workspace:^",
    "@foxogram/rest": "workspace:^",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@tsconfig/strictest": "^2.0.5",
    "eslint": "^9.25.1",
    "typedoc": "^0.27.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "unbuild": "^2.0.0"
  }
}
