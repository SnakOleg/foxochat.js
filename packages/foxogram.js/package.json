{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "foxogram.js",
  "version": "0.1.4",
  "description": "A powerful library for interacting with the Foxogram API",
  "author": "FoxoCorp",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["./dist"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxocorp/foxogram.js"
  },
  "bugs": {
    "url": "https://github.com/foxocorp/foxogram.js/issues"
  },
  "scripts": {
    "lint": "biome lint --write",
    "build": "rslib build",
    "format": "biome format --write",
    "prepack": "pnpm run build"
  },

  "dependencies": {
    "@foxogram/api": "workspace:^",
    "@foxogram/api-types": "workspace:^",
    "@foxogram/gateway": "workspace:^",
    "@foxogram/gateway-types": "workspace:^",
    "@foxogram/rest": "workspace:^",
    "@swc/helpers": "^0.5.17",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rslib/core": "^0.6.9",
    "@tsconfig/strictest": "^2.0.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
